<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:orientation="vertical"

    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

           <ImageView
               android:id="@+id/custom_view_products_ImageView_image"
               android:layout_width="104dp"
               android:layout_height="67dp"
               android:layout_gravity="left"
               android:contentDescription="@string/descripcion_imagen"
               android:src="@drawable/lollipop" />

           <TextView
               android:id="@+id/custom_view_products_TextView_description"
               android:layout_width="227dp"
               android:layout_height="71dp"
               android:textAppearance="?android:attr/textAppearanceLarge" />
        
    </LinearLayout>

    <RatingBar
        android:id="@+id/custom_view_products_RatingBar_puntuation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3"
        android:visibility="visible" 
        android:layout_gravity="center"
        android:isIndicator="true"
        />

</LinearLayout>